---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import contractorWorking from "@images/contractor_working.jpg";
import businessMeet from "@images/contract_signing.jpg";
import budgetDocument from "@images/calculator.jpg";
import handshake from "@images/handshake.jpg"
import { partnersData } from "@/data_files/constants";
import lisbonMap from "src/images/lisbon_map_2.png"
import InstagramFeed from "@/components/sections/projects/InstagramFeed.astro";
import Map from "@/components/sections/reach/Map.astro";
import ShowcaseProjects from "@/components/sections/projects/ShowcaseProjects.astro";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <!-- <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore ScrewFast on GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  /> -->

  <HeroSection
  
    title=`Transforme Sua Casa em um <span
        class="text-yellow-500 dark:text-yellow-400">Lar dos Sonhos</span>`
    subTitle="Mais de 200 projetos concluídos. Desde 2015 entregando qualidade, pontualidade e satisfação em cada renovação."
    primaryBtn="Pedir Orçamento"
    primaryBtnURL="/products"
    secondaryBtn="Galeria de Projetos"
    secondaryBtnURL="/gallery"
    withReview={false}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of ScrewFast product boxes containing assorted hardware tools"
  />

  <!-- <ClientsSection
    title="Trusted by Industry Leaders"
    subTitle="Experience the reliability chosen by industry giants."
    partners={partnersData}
  /> -->

  <FeaturesGeneral
    title="Nossos Serviços"
    subTitle="Na JM Renovações, entendemos que uma casa é uma extensão do ser humano. Portanto, cada cômodo deve ser cuidado e preservado de modo a manter uma harmonia completa no ambiente. Conte conosco para qualquer renovação e atingir o visual que você deseja para seu lar."
    src={lisbonMap}
    alt="Map of Lisboa, Portugal"
    features={features}
  />

  <Map />

  <ShowcaseProjects />

  <FeaturesNavs
    title=`Nosso <span class="text-yellow-500 dark:text-yellow-400">Processo de Trabalho</span>:`
    tabs={[
      {
        heading: "1. Consulta Inicial",
        content:
          "Avaliação Gratuita das suas necessidades e visão para o projeto.",
        svg: "tools",
        src: businessMeet,
        alt: "Yellow and black heavy equipment on brown grass field",
        first: true,
        iconName: "mdi:account-question"
      },
      {
        heading: "2. Orçamentação",
        content:
          "Proposta detalhada com materiais, prazos e valores transparentes.",
        svg: "dashboard",
        src: budgetDocument,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
        iconName: "mdi:calculator-variant"
      },
      {
        heading: "3. Execução",
        content:
          "Realização do projeto com supervisão contínua e atualizações regulares.",
        svg: "house",
        src: contractorWorking,
        alt: "Gray metal building frame near tower crane during daytime",
        iconName: "mdi:hammer-wrench"
      },
      {
        heading: "4. Entrega",
        content:
          "Limpeza pós-obra, inspeção final e ativação da garantia de serviço.",
        svg: "house",
        src: handshake,
        alt: "Gray metal building frame near tower crane during daytime",
        iconName: "mdi:check-decagram"
      },
    ]}
  />

  <TestimonialsSection
    title="O que dizem sobre nós?"
    subTitle="Na JM Remodelações, é muito importante o feedback de nossos clientes."
    testimonials={[
      {
        content:
          "Renovaram o nosso apartamento inteiro em apenas 6 semanas, conforme prometido. Qualidade excepcional e preço justo. Estamos completamente satisfeitos.",
        author: "João Mendes",
        role: "Cascais | Portugal",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
      /* {
        content:
          "A JM Renovações transformou a nossa cozinha antiga num espaço moderno e funcional. Equipa profissional, pontual e extremamente limpa. Recomendo vivamente!",
        author: "Rita Martins",
        role: "Lisboa | Portugal",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      }, */
    ]}
    statistics={[
      {
        count: "200+",
        description:
          "projetos concluídos e clientes satisfeitos em mais de 10 anos",
      },
      {
        count: "100%",
        description:
          "de taxa de precisão na entrega dentro do prazo determinado",
      },
      {
        count: "80%",
        description:
          "clientes que retornam ou indicam para novos projetos de remodelação e ampliacão",
      }
    ]}
  />

 <!--  <PricingSection pricing={pricing} /> -->

  <!-- <FAQ title="Frequently<br />asked questions" faqs={faqs} /> -->

  <HeroSectionAlt
    title="Se Interessou Em Ter Seu Ambiente Renovado?"
    subTitle="Melhore a qualidade do seu lar com nossos serviços."
    url="https://github.com/mearashadowfax/ScrewFast"
  />
</MainLayout>
